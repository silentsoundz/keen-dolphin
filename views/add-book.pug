doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title keen-dolphin's Simple Bookstore
    link(rel='stylesheet', href='/styles/meyers-reset.css')
    link(rel='stylesheet', href='/styles/add-book.css')
  body
    .header
      p#logo keen-dolphin's
      h1 Add Book Page
      hr
    .main
      ul
        li
          img#book-cover(src='http://placehold.it/150x225', alt='book cover')
        .book-info
          form(action='/api/books', method='post')
            li#book-title
              input(type='text' name='title', placeholder='book title')
            li#book-year
              input(type='text' name='year', placeholder='book year')
            li#book-author
              input(type='text' name='author', placeholder='book author')
            li#book-genre
              input(type='text' name='genres', placeholder='book genre')
            form.buttons(action='/api/books', method='post')
             button#add(type='submit') Submit
