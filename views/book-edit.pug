extends layout.pug

block content
  body
    .header
      p#logo keen-dolphin's
      h1 Simple Bookstore
      hr
    .main
      h1 Edit Book Page
      ul
        li
          img#book-cover(src='http://placehold.it/150x225', alt='book cover')
        .book-info
          form(action=`/api/books/edit/${book.id}`, method='post')
            li#book-title 
              input(type='text' name='title', value=book.title)    
            li#book-year 
              input(type='text' name='year', value=book.year)  
            button#edit(type='submit' method='post' value='submit') Submit
