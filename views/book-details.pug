extends layout.pug

block content
  body
    .header
      p#logo keen-dolphin's
      h1 Simple Bookstore
      hr
    .main
      h1 Book Details Page
      ul.book
        li
          img#book-cover(src='http://placehold.it/150x225', alt='book cover')
        .book-info
          li#book-title= book.title
          li#book-author= book.author
          li#book-genre= book.genre
          li#book-year= book.year
          input#book-id(type='hidden', value=book.id)
          form.buttons(action=`/edit/${book.id}`, method='get')
           button#edit(type='submit') Edit
          form.buttons(action=`/api/books/${book.id}/delete`, method='post')
           button#delete(type='submit') Delete
