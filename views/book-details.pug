extends layout.pug

block content
  .header
    p#logo keen-dolphin's
    h1 Simple Bookstore
    hr
  .main
    h1 Book Details Page
    ul.book
      li
        img#book-cover(src='http://placehold.it/150x225', alt='book cover')
      .book-info
        li#book-title= book.title
        li#book-author= book.author
        li#book-genre= book.genre
        li#book-year= book.year
        form.buttons(action='/api/books/:id', method='post')
         button#edit(type='button') Edit
        form.buttons(action='/api/books/:id/delete', method='post')
         button#delete(type='button') Delete
  script(src='./javascripts/controler.js')
